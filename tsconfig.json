{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "rootDir": "./src/",
    "outDir": "./build",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"],

  "ts-node": {
    "esm": true,
    "compiler": "typescript"
  }
}
